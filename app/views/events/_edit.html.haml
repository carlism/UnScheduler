#new_event
  %h2 Edit Event
  = form_for @event, :url => { :action => :update } do |f|
    .horizontal
      = f.label :name
      = f.text_field :name, :size=>25, :autofocus=>"true"
    .horizontal
      = f.label :description
      = f.text_field :description, :size=>40
    .horizontal
      = f.label :site_url
      = f.text_field :site_url, :size=>40
    .horizontal
      = f.label :image_url
      = f.text_field :image_url, :size=>40
    %p 
      = f.submit "Update"
      = link_to "Cancel", root_path
  %p Administrators
  = form_for @new_admin, :remote => true do |f|
    = f.hidden_field :event_id
    = f.hidden_field :role_type
    = text_field :user, :email
    = f.submit "Add Admin"
  #admins= render :partial=>'admins'
  = link_to "Done", root_path
