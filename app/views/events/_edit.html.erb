<div id="new_event">
	<h2>Edit Event</h2>

	<%= form_for @event, :url => { :action => :update } do |f| %>
  	<p><%= f.label :name %><br />
  		<%= f.text_field :name %></p>

    <p><%= f.label :description %><br />
        <%= f.text_field :description %></p>

  	<p><%= f.label :site_url %><br />
  		<%= f.text_field :site_url %></p>

      <p><%= f.label :image_url %><br />
          <%= f.text_field :image_url %></p>

  	<p><%= f.submit "Update" %> <%=link_to "Cancel", root_path %></p>
	<% end %>
</div>