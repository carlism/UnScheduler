- title @event.name
- content_for :header_bottom do
  / testing
  :javascript
    $(document).ready(function(){
      $( "#event_date_event_date" ).datepicker();
    });

.right_controls
  - if @event.admin?(current_user)
    = form_for [@event, @event.event_dates.build] do |f|
      = f.text_field :event_date
      = f.submit "Add date"
    - if @selected_date
      = link_to "delete date", event_event_date_path(@event, @selected_date), :method => :delete, :confirm => "Are you sure?"
  - if @selected_date
    %select
      = options_from_collection_for_select @event.event_dates, 'id', 'event_date', @selected_date.id
%h1
  %img.logo_thumb{:src => @event.image_url}/
  = @event.name