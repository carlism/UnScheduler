!!!
%html
  %head
    %title 
      Unscheduler : 
      = yield(:title) || "The BarCamp/Unconference Scheduler"
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = stylesheet_link_tag "jquery-ui-1.8.16.custom"
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #header
      .menu_item= link_to 'Home', '/'
      - if user_signed_in?
        .menu_item= link_to "Sign out", destroy_user_session_path
        .menu_item= current_user.email
      - else
        .menu_item= link_to "Sign in/Sign up", new_user_session_path, :remote => true
      -if notice
        .notice= notice
      -if error
        .error= error
    #content
      = yield
    #footer
      %a{:href=>"mailto:support@unscheduler.com"} Contact Us
      This site is powered by open source software. Learn more
      %a{:href=>"http://github.com/carlism/unscheduler"} where we maintain the code
    #dialog_box
    #fade.black_overlay
    = yield(:javascript)
